// ============================================================================
// CMS - Prisma Schema
// ============================================================================
//
// Design Rationale:
//
// 1. BLOCK-BASED ARCHITECTURE
//    - Each block is a separate row for independent CRUD operations
//    - Position field enables O(1) reordering without touching content
//    - JSON data field allows type-specific structure without table bloat
//
// 2. ANNOTATION SEPARATION
//    - Annotations stored at article level (NOT in blocks)
//    - Enforces reference integrity: if marker exists, annotation must exist
//    - Enables batch validation of reference markers vs annotations
//    - Simplifies annotation management (add/edit/delete) without block updates
//
// 3. OPTIONAL MEDIA
//    - Video/Podcast as separate tables with optional one-to-one relation
//    - Allows rich metadata without polluting Article table
//    - Easy to query articles with/without media
//
// 4. EDITABILITY
//    - Update single block: UPDATE ArticleBlock WHERE id = ?
//    - Reorder blocks: UPDATE position values only
//    - Add/remove annotation: No block updates needed
//    - All operations are surgical, no cascading updates
//
// ============================================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

// ============================================================================
// USER AUTHENTICATION
// ============================================================================

model Users {
  id        String   @id @default(cuid())
  account   String   @unique
  password  String // Store hashed password only
  title     String // Role/permission title (e.g., "admin", "editor", "viewer")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([account])
  @@map("users")
}
// ============================================================================
// KeyWords and NineBlocks
// ============================================================================

model KeyWords {
  id          String              @id @default(cuid())
  name        String              @unique
  articles    ArticleKeyWord[]
  selections  SelectionKeyWord[]
  videos      VideoKeyWord[]
}

model CakeCategory {
  id          String                    @id @default(cuid())
  name        String
  articles    ArticleCakeCategory[]
  photographs PhotographCakeCategory[]
  videos      VideoCakeCategory[]
}

model NineBlocks {
  id          String                @id @default(cuid())
  name        String
  articles    ArticleNineBlock[]
  photographs PhotographNineBlock[]
  videos      VideoNineBlock[]
}
// ============================================================================
// Many-to-many junction tables for Article
// ============================================================================
model ArticleCakeCategory {
  articleId      String
  cakeCategoryId String
  article        Article      @relation(fields: [articleId], references: [id], onDelete: Cascade)
  cakeCategory   CakeCategory @relation(fields: [cakeCategoryId], references: [id], onDelete: Cascade)

  @@id([articleId, cakeCategoryId])
  @@map("article_cake_categories")
}

model ArticleKeyWord {
  articleId String
  keyWordId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  keyWord   KeyWords @relation(fields: [keyWordId], references: [id], onDelete: Cascade)

  @@id([articleId, keyWordId])
  @@map("article_keywords")
}

model ArticleNineBlock {
  articleId   String
  nineBlockId String
  article     Article    @relation(fields: [articleId], references: [id], onDelete: Cascade)
  nineBlock   NineBlocks @relation(fields: [nineBlockId], references: [id], onDelete: Cascade)

  @@id([articleId, nineBlockId])
  @@map("article_nine_blocks")
}

// ============================================================================
// Many-to-many junction tables for Photograph
// ============================================================================


model PhotographNineBlock {
  photographId String
  nineBlockId  String
  photograph   Photograph @relation(fields: [photographId], references: [id], onDelete: Cascade)
  nineBlock    NineBlocks @relation(fields: [nineBlockId], references: [id], onDelete: Cascade)

  @@id([photographId, nineBlockId])
  @@map("photograph_nine_blocks")
}

model PhotographCakeCategory {
  photographId   String
  cakeCategoryId String
  photograph     Photograph   @relation(fields: [photographId], references: [id], onDelete: Cascade)
  cakeCategory   CakeCategory @relation(fields: [cakeCategoryId], references: [id], onDelete: Cascade)

  @@id([photographId, cakeCategoryId])
  @@map("photograph_cake_categories")
}

// ============================================================================
// Many-to-many junction tables for Video
// ============================================================================

model VideoKeyWord {
  videoId   String
  keyWordId String
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  keyWord   KeyWords @relation(fields: [keyWordId], references: [id], onDelete: Cascade)

  @@id([videoId, keyWordId])
  @@map("video_keywords")
}

model VideoNineBlock {
  videoId     String
  nineBlockId String
  video       Video      @relation(fields: [videoId], references: [id], onDelete: Cascade)
  nineBlock   NineBlocks @relation(fields: [nineBlockId], references: [id], onDelete: Cascade)

  @@id([videoId, nineBlockId])
  @@map("video_nine_blocks")
}

model VideoCakeCategory {
  videoId        String
  cakeCategoryId String
  video          Video        @relation(fields: [videoId], references: [id], onDelete: Cascade)
  cakeCategory   CakeCategory @relation(fields: [cakeCategoryId], references: [id], onDelete: Cascade)

  @@id([videoId, cakeCategoryId])
  @@map("video_cake_categories")
}

// ============================================================================
// Article
// ============================================================================

model Article {
  id          String             @id @default(cuid())
  englishTitle  String?
  title       String
  author      String
  coverImage  String             // 封面照片 URL (required)
  keyWords    ArticleKeyWord[]
  nineBlocks  ArticleNineBlock[]
  cakeCategory ArticleCakeCategory[]
  slug        String             @unique
  publishedAt DateTime?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  // Relations
  blocks      ArticleBlock[]
  annotations ArticleAnnotation[]
  videos      ArticleVideo[]
  podcasts    ArticlePodcast[]

  @@index([slug])
  @@index([publishedAt])
  @@map("articles")
}

// ============================================================================
// Article block
// ============================================================================

model ArticleBlock {
  id        String    @id @default(cuid())
  articleId String
  position  Int // 0-indexed, determines display order
  type      BlockType
  data      Json // Type-specific data (TextBlockData | ImageBlockData | QuoteBlockData)
  // Note: Text content and image captions can contain inline reference markers (e.g., [1], [2])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  // Composite unique constraint: one position per article
  @@unique([articleId, position])
  @@index([articleId, position]) // Fast ordered retrieval
  @@map("article_blocks")
}

enum BlockType {
  text
  image
  quote
}

// ============================================================================
// Article ANNOTATIONS (REFERENCES)
// ============================================================================

model ArticleAnnotation {
  id        String   @id @default(cuid())
  articleId String
  marker    String // Reference marker (e.g., "1", "2", "a")
  text      String   @db.Text // Full citation text
  url       String? // Optional source link
  position  Int // Display order in annotations section
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  // Ensure unique markers per article
  @@unique([articleId, marker])
  @@unique([articleId, position])
  @@index([articleId, position]) // Fast ordered retrieval
  @@map("article_annotations")
}

// ============================================================================
// Article OPTIONAL MEDIA ATTACHMENTS
// ============================================================================

model ArticleVideo {
  id        String   @id @default(cuid())
  articleId String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@map("article_videos")
}

model ArticlePodcast {
  id        String   @id @default(cuid())
  articleId String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@map("article_podcasts")
}

// ============================================================================
// Selection (similar to Article but without cakeCategory and nineBlocks)
// ============================================================================

model SelectionKeyWord {
  selectionId String
  keyWordId   String
  selection   Selection @relation(fields: [selectionId], references: [id], onDelete: Cascade)
  keyWord     KeyWords  @relation(fields: [keyWordId], references: [id], onDelete: Cascade)

  @@id([selectionId, keyWordId])
  @@map("selection_keywords")
}

model Selection {
  id          String               @id @default(cuid())
  englishTitle  String?
  title       String
  author      String
  url         String            // 連結
  nation      String            // 國家
  date                  DateTime              // 新聞日期
  coverImage  String             // 封面照片 URL (required)
  keyWords    SelectionKeyWord[]
  slug        String             @unique
  setUpSelection  Boolean       @default(false)
  publishedAt DateTime?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  // Relations
  blocks      SelectionBlock[]
  annotations SelectionAnnotation[]
  videos      SelectionVideo[]
  podcasts    SelectionPodcast[]

  @@index([slug])
  @@index([publishedAt])
  @@map("selections")
}

// ============================================================================
// Selection block
// ============================================================================

model SelectionBlock {
  id          String    @id @default(cuid())
  selectionId String
  position    Int // 0-indexed, determines display order
  type        BlockType
  data        Json // Type-specific data (TextBlockData | ImageBlockData | QuoteBlockData)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  selection Selection @relation(fields: [selectionId], references: [id], onDelete: Cascade)

  @@unique([selectionId, position])
  @@index([selectionId, position])
  @@map("selection_blocks")
}

// ============================================================================
// Selection ANNOTATIONS (REFERENCES)
// ============================================================================

model SelectionAnnotation {
  id          String   @id @default(cuid())
  selectionId String
  marker      String // Reference marker (e.g., "1", "2", "a")
  text        String   @db.Text // Full citation text
  url         String? // Optional source link
  position    Int // Display order in annotations section
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  selection Selection @relation(fields: [selectionId], references: [id], onDelete: Cascade)

  @@unique([selectionId, marker])
  @@unique([selectionId, position])
  @@index([selectionId, position])
  @@map("selection_annotations")
}

// ============================================================================
// Selection OPTIONAL MEDIA ATTACHMENTS
// ============================================================================

model SelectionVideo {
  id          String   @id @default(cuid())
  selectionId String
  url         String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  selection Selection @relation(fields: [selectionId], references: [id], onDelete: Cascade)

  @@map("selection_videos")
}

model SelectionPodcast {
  id          String   @id @default(cuid())
  selectionId String
  url         String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  selection Selection @relation(fields: [selectionId], references: [id], onDelete: Cascade)

  @@map("selection_podcasts")
}

// ============================================================================
// TIPC Photograph
// ============================================================================

model Photograph {
  id          String                @id @default(cuid())
  url         String
  title       String
  description String
  nineBlocks  PhotographNineBlock[]
  cakeCategory PhotographCakeCategory[]
  author      String
  photoDate   DateTime
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt

  @@index([photoDate])
  @@map("photographs")
}

// ============================================================================
// TIPC Video
// ============================================================================

model Video {
  id          String            @id @default(cuid())
  url         String
  title       String
  mainImg     String
  description String
  keyWords    VideoKeyWord[]
  nineBlocks  VideoNineBlock[]
  cakeCategory VideoCakeCategory[]
  author      String
  videoDate   DateTime
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([videoDate])
  @@map("videos")
}

model archiveIndex {
  id        Int      @id @default(autoincrement())
  Class     String
  WebName   String
  OrgName   String
  OrgWebLink    String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

model Partner {
  id    Int    @id @default(autoincrement())
  name  String
  logo  String
  webUrl  String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

model Book {
  id        Int      @id @default(autoincrement())
  authors   String[] 
  bookname  String
  publisher String
  isbn      String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================================================
// Event
// ============================================================================

model Event {
  id          String       @id @default(cuid())
  title       String
  eventDate   DateTime     // The date of the event
  mainImage   String       // Cover image URL
  alt         String       // Alt text for main image
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  showInImgCarousel Boolean   @default(false)

  // Relations
  blocks      EventBlock[]
  images      EventImage[]

  @@index([eventDate])
  @@map("events")
}

// ============================================================================
// Event block (for description content)
// ============================================================================

model EventBlock {
  id        String    @id @default(cuid())
  eventId   String
  position  Int       // 0-indexed, determines display order
  type      BlockType
  data      Json      // Type-specific data (TextBlockData | ImageBlockData | QuoteBlockData)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  // Composite unique constraint: one position per event
  @@unique([eventId, position])
  @@index([eventId, position]) // Fast ordered retrieval
  @@map("event_blocks")
}

// ============================================================================
// Event related images
// ============================================================================

model EventImage {
  id        String   @id @default(cuid())
  eventId   String
  src       String   // Image URL
  position  Int      // Display order
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([eventId, position])
  @@index([eventId, position]) // Fast ordered retrieval
  @@map("event_images")
}

